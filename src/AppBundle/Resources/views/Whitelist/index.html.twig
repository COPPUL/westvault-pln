{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Whitelist Entries</h1>
    <p class="count">
        Displaying {{ entities|length }} records of {{ entities.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body -%}

        <div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('whitelist_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
            <a href="{{ path('whitelist_search') }}" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</a>
        </div>
    </div>
        <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Uuid</th>
                <th>Comment</th>
                <th>Institution</th>
                <th>Deposits</th>
                <th>TOS</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            {% set institution = repo.findOneBy({'uuid': entity.uuid}) %}
            <tr>
                <td><a href="{{ path('whitelist_show', { 'id': entity.id }) }}">{{ entity.uuid }}</a></td>
                <td>{{ entity.comment }}</td>
                <td>{% if institution is not null %}{{ institution.title }}{% endif %}</td>
                <td>{% if institution is not null %}{{ institution.countDeposits() }}{% endif %}</td>
                <td>{% if institution is not null %}{% if institution.termsAccepted %}Yes{% else %}No{% endif %}{% endif %}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
