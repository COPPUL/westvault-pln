{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>TermOfUse List</h1>
{% endblock %}

{% block body -%}

        <div class="btn-toolbar pull-right">
        <div class="btn-group">
            <a href="{{ path('termofuse_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> New</a>
        </div>
    </div>
        <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Weight</th>
                <th>Created</th>
                <th>Keycode</th>
                <th>Langcode</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('termofuse_show', { 'id': entity.id }) }}">{{ entity.weight }}</a></td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.keyCode }}</td>
                <td>{{ entity.langCode }}</td>
                <td>{{ entity.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
