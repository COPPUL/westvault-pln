{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Deposit List</h1>
{% endblock %}

{% block body -%}

    <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Uuid</th>
                <th>Received</th>
                <th>Action</th>
                <th>Journal</th>
                <th>Volume</th>
                <th>Issue</th>
                <th>Pubdate</th>
                <th>State</th>
                <th>Plnstate</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.fileuuid }}</a></td>
                    <td>{% if entity.received %}{{ entity.received|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ entity.action }}</td>
                    <td>{{ entity.journal.title }}</td>
                    <td>{{ entity.volume }}</td>
                    <td>{{ entity.issue }}</td>
                    <td>{{ entity.pubDate|date('Y-m-d') }}</td>
                    <td>{{ entity.state }}</td>
                    <td>{{ entity.plnState }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
