{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Deposit List</h1>
{% endblock %}

{% block body -%}

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>File_uuid</th>
                <th>Deposit_uuid</th>
                <th>Received</th>
                <th>Action</th>
                <th>Volume</th>
                <th>Issue</th>
                <th>Pubdate</th>
                <th>Checksumtype</th>
                <th>Checksumvalue</th>
                <th>Url</th>
                <th>Size</th>
                <th>State</th>
                <th>Plnstate</th>
                <th>Depositdate</th>
                <th>Depositreceipt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fileuuid }}</td>
                <td>{{ entity.deposituuid }}</td>
                <td>{% if entity.received %}{{ entity.received|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.action }}</td>
                <td>{{ entity.volume }}</td>
                <td>{{ entity.issue }}</td>
                <td>{% if entity.pubDate %}{{ entity.pubDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.checksumType }}</td>
                <td>{{ entity.checksumValue }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.size }}</td>
                <td>{{ entity.state }}</td>
                <td>{{ entity.plnState }}</td>
                <td>{% if entity.depositDate %}{{ entity.depositDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.depositReceipt }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deposit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('deposit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('deposit_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
