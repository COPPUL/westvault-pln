{% extends '::base.html.twig' %}

    
{% block pageheader %}
    <h1>Deposit</h1>
{% endblock %}
    
{% block body -%}
        <ul class="record_actions">
    <li>
        <a href="{{ path('deposit') }}">
            Back to the list
        </a>
    </li>
</ul>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>File uuid</th>
                <td>{{ entity.fileuuid }}</td>
            </tr>
            <tr>
                <th>Deposit uuid</th>
                <td>{{ entity.deposituuid }}</td>
            </tr>
            <tr>
                <th>Received</th>
                <td>{{ entity.received|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ entity.action }}</td>
            </tr>
            <tr>
                <th>Journal</th>
                <td><a href="{{ path('journal_show', { 'id' : entity.journal.id }) }}">{{ entity.journal.title }}</a>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ entity.volume }}</td>
            </tr>
            <tr>
                <th>Issue</th>
                <td>{{ entity.issue }}</td>
            </tr>
            <tr>
                <th>Publication date</th>
                <td>{{ entity.pubDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Checksum type</th>
                <td>{{ entity.checksumType }}</td>
            </tr>
            <tr>
                <th>Checksum value</th>
                <td>{{ entity.checksumValue }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td><a href="{{ entity.url }}">{{ entity.url }}</a></td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ entity.size }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ entity.state }}</td>
            </tr>
            <tr>
                <th>Pln state</th>
                <td>{{ entity.plnState }}</td>
            </tr>
            <tr>
                <th>Deposit date</th>
                <td>{{ entity.depositDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Deposit receipt</th>
                <td>
                    {% if entity.depositReceipt %}
                        <a href="{{ entity.depositReceipt }}"</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Processing history</th>
                <td>{{ entity.processingLog|nl2br }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
