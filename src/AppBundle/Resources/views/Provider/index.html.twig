{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Provider List</h1>
    <p class="count">
        Displaying {{ entities|length }} records of {{ entities.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body -%}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('provider_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Deposits</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('provider_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td><a href="{{ path('provider_deposits', {'id': entity.id}) }}">{{ entity.countDeposits }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
