{% extends 'base.html.twig' %}


{% block pageheader %}
    <h1>{{ doc.title }}</h1>
	<p>{{ doc.summary }}<br/>Updated {{ doc.updated|date }}</p>
{% endblock %}

{% block body %}
	{%- if is_granted('ROLE_ADMIN') -%} 
	<div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('admin_document_edit', { 'id': doc.id }) }}" class="btn btn-default">
				<span class='glyphicon glyphicon-edit'></span> Edit
			</a>
		</div>
	</div>
	{%- endif -%}

	{{ doc.content|raw }}
{% endblock %}
