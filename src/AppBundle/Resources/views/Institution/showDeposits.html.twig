{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Deposit List</h1>
{% endblock %}

{% block body -%}

<p>Showing deposits for {{ institution.title }}</p>

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('institution_show', {'id': institution.id}) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Institution
            </a>
        </div>
    </div>
    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Deposit Uuid</th>
                <th>Received</th>
                <th>Action</th>
                <th>Volume</th>
                <th>Issue</th>
                <th>State</th>
                <th>PLN State</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('deposit_show', { 'id': entity.id }) }}">{{ entity.deposituuid }}</a></td>
                    <td>{% if entity.received %}{{ entity.received|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.action }}</td>
                    <td>{{ entity.volume }}</td>
                    <td>{{ entity.issue }}</td>
                    <td>{{ entity.state }}</td>
                    <td>{{ entity.plnState }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
