{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Term Of Use History</h1>
    <p class="count">
        Displaying {{ entities|length }} records of {{ entities.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body -%}

        <table class="table table-striped table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>Term Id</th>
                <th>Action</th>
                <th>User</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('termhistory_show', { 'id': entity.termId }) }}">{{ entity.termId }}</a></td>
                <td>{{ entity.action }}</td>
                <td>{{ entity.user }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

{% endblock %}
