{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Blacklisted Provider</h1>
{% endblock %}

{% block body -%}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('blacklist') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('blacklist_edit', { 'id': entity.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('blacklist_delete', { 'id': entity.id }) }}" class="btn btn-default js-confirm" data-confirm="Are you sure you want to delete this Blacklist?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ entity.uuid }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
			<tr>
				<th>Provider</th>
				<td>
					{% if provider %}
						<a href="{{ path('provider_show', {'id': provider.id}) }}">
							{{provider.title}}
						</a>
					{% else %}
						(unknown)
					{% endif %}
				</td>
			</tr>
        </tbody>
    </table>
{% endblock %}
