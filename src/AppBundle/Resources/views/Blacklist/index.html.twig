{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Blacklist List</h1>
{% endblock %}

{% block body -%}

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Uuid</th>
                <th>Comment</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blacklist_show', { 'id': entity.id }) }}">{{ entity.uuid }}</a></td>
                <td>{{ entity.comment }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('blacklist_new') }}">
                <span class="glyphicon glyphicon-plus"></span>
            </a>
        </li>
    </ul>
    {% endblock %}
