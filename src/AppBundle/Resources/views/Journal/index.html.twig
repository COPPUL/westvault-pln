{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Journal List</h1>
{% endblock %}

{% block body -%}

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Contacted</th>
                <th>Notified</th>
                <th>Title</th>
                <th>Issn</th>
                <th>Url</th>
                <th>Status</th>
                <th>Email</th>
                <th>Publishername</th>
                <th>Publisherurl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('journal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.uuid }}</td>
                <td>{% if entity.contacted %}{{ entity.contacted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.notified %}{{ entity.notified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.issn }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.publisherName }}</td>
                <td>{{ entity.publisherUrl }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('journal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('journal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('journal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
