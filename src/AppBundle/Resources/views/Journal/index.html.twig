{% extends '::base.html.twig' %}


{% block pageheader %}
    <h1>Journal List</h1>
{% endblock %}

{% block body -%}

    <div class="row">
        <div class="col-sm-2">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Filter</strong></div>
                <div class="panel-body">
                    <ul>
                    {% for status in statuses %}
                        <li><a href="{{path('journal', { 'status': status.status })}}">{{ status.status }} ({{status.ct}})</a></li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-10">

            <div class="btn-toolbar">
                <div class="btn-group pull-right">
                    <a href="{{ path('journal_search') }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span> Search
                    </a>
                </div>
            </div>

            <table class="table table-striped table-condensed table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Contacted</th>
                        <th>Status</th>
                        <th>Url</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('journal_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                            <td>{% if entity.contacted %}{{ entity.contacted|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.status }}</td>
                            <td><a href="{{ entity.url }}">{{ entity.url }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>


            <div class="navigation">
                {{ knp_pagination_render(entities) }}
            </div>
        </div>
    </div>

{% endblock %}
