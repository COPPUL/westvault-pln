<entry xmlns="http://www.w3.org/2005/Atom"
        xmlns:dcterms="http://purl.org/dc/terms/"
        xmlns:lom="http://lockssomatic.info/SWORD2"
        xmlns:pkp="http://pkp.sfu.ca/SWORD">
    <title>{{ title }}</title>
    <id>urn:uuid:{{ deposit.depositUuid }}</id>
    <updated>{{ deposit.received|date('Y-m-d') }}</updated>
    <author><name>{{ deposit.journal.title }}</name></author>
    <summary type="text">
        Content deposited to LOCKSS-O-Matic via the PKP PLN Staging Server.
    </summary>
    <!-- @size is the file size in kB (1,000 bytes) -->
    <lom:content 
        size="{{ (deposit.packageSize / 1000) | round(0, 'floor') }}"
        checksumType="{{ deposit.packageChecksumType }}"
        checksumValue="{{ deposit.checksumValue }}"
        pkp:volume="{{deposit.volume}}"
        pkp:issue="{{deposit.issue}}"
        pkp:pubDate="{{deposit.pubDate|date}}"
        pkp:journalTitle="{{plnJournalTitle}}"
        pkp:journalUrl="{{deposit.journal.url}}"
        pkp:issn="{{deposit.journal.issn}}"
        pkp:publisherName="{{deposit.journal.publisherName}}"
        pkp:publisherUrl="{{deposit.journal.publisherUrl}}">
        {{ url('fetch', { 'journalUuid': deposit.journal.uuid, 'depositUuid': deposit.depositUuid }) }}
        <lom:property name="base_url" value="{{ url('home') }}" />
        <lom:property name="permission_url" value="{{ url('lockss_permission') }}" />0
        <lom:property name="container_number" value="{{ deposit.aucontainer.id }}"/>
    </lom:content>
</entry>
